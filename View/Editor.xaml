<Window x:Name="Editor1" x:Class="BobMapper.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BobMapper"
        xmlns:model="clr-namespace:BobMapper.Model"
        xmlns:vm="clr-namespace:BobMapper.ViewModel"
        mc:Ignorable="d"
        Background="DimGray"
        Title="Editor" Height="720" Width="1280" WindowState="Maximized" ResizeMode="NoResize">
        <Window.DataContext>
            <vm:EditorViewModel/>
        </Window.DataContext>
    <Grid>
        <DockPanel Background="SlateGray">
            <Menu DockPanel.Dock="Top" Width="auto" Height="20">
                <MenuItem Header="File"></MenuItem>
                <MenuItem Header="Edit"/>
                <MenuItem Header="Tools"/>
                <MenuItem Header="Compile"/>
                <MenuItem Header="Help"/>
            </Menu>
            <Menu DockPanel.Dock="Left" Width="40" Height="auto">
                <MenuItem>
                    <StackPanel>
                        <Image>

                        </Image>
                    </StackPanel>
                </MenuItem>
                <MenuItem Header="Move"/>
                <MenuItem Header="Rotate"/>
                <Separator></Separator>
                <MenuItem Header="Draw Floor"/>
                <MenuItem Header="Draw Wall"></MenuItem>
                <MenuItem Header="Place Prop"></MenuItem>
                <MenuItem Header="NPC"></MenuItem>
                <MenuItem Header="Add Misc"></MenuItem>
            </Menu>
            <Menu DockPanel.Dock="Right" Width="400" Height="auto" HorizontalAlignment="Right">
                <StackPanel>
                    
                </StackPanel>
            </Menu>
            <ScrollViewer HorizontalScrollBarVisibility="Visible" Background="White">
                <!-- BAD CANVAS CODE AHEAD -->
                <Canvas RenderTransform="1 0 0 -1 0 0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ContentControl>
                        <ItemsControl ItemsSource="{Binding Props}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type model:Prop}">
                                    <Image Source="{Binding PropTexture}" Width="auto" Height="auto">
                                            <Image.RenderTransform>
                                                <TranslateTransform X="{Binding Coordinates.x}" Y="{Binding Coordinates.y}"/>
                                            </Image.RenderTransform>

                                        </Image>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas></Canvas>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ContentControl>
                </Canvas>
            </ScrollViewer>
        </DockPanel>
        
    </Grid>

    <Window.Resources>
        
    </Window.Resources>
</Window>
